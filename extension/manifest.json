{
    "name": "Screen Capturing",
    "description": "Allows you to capture your desktop for use in video applications",
    "version": "0.1.0",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "extension.js"
        ],
        "persistent": false
    },
    "externally_connectable": {
        "matches": [
            "*://nameless-dawn-41556.herokuapp.com/*"
        ]
    },
    "permissions": [
        "desktopCapture"
    ]
}